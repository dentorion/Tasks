<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_root"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/section_selected_background"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp">

    <ImageView
        android:id="@+id/appwidget_icon_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="0"
        app:srcCompat="@drawable/empty_radio_state_unchecked" />

    <TextView
        android:id="@+id/appwidget_tasks_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginHorizontal="4dp"
        android:layout_marginStart="12dp"
        android:text="@string/widget_tasks_count"
        android:textColor="@color/main"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>