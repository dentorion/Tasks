<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_root"
    android:layout_width="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="4dp"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:background="@drawable/section_background">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="9sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/section_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/section_circle"
        app:layout_constraintTop_toTopOf="@+id/section_circle"
        tools:text="Домашние дела" />

    <ImageView
        android:id="@+id/section_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_circle_day_unselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/section_icon"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="@dimen/small_icon_opacity_size_item"
        app:layout_constraintBottom_toBottomOf="@+id/section_circle"
        app:layout_constraintEnd_toEndOf="@+id/section_circle"
        app:layout_constraintStart_toStartOf="@+id/section_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_food" />

    <ImageView
        android:id="@+id/section_important"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_circle_that_day"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/section_circle"
        app:layout_constraintStart_toStartOf="@+id/section_circle"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
