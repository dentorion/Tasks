<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_url_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/section_background"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/link_url_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/link_url_delete"
        app:layout_constraintStart_toEndOf="@+id/link_url_circle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="http://youtube.com?video=XX1245XYZ" />

    <ImageView
        android:id="@+id/link_url_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_circle_that_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/link_url_icon"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:alpha="@dimen/small_icon_opacity_size_item"
        app:layout_constraintBottom_toBottomOf="@+id/link_url_circle"
        app:layout_constraintEnd_toEndOf="@+id/link_url_circle"
        app:layout_constraintStart_toStartOf="@+id/link_url_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_link_white" />

    <ImageView
        android:id="@+id/link_url_delete"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:alpha="@dimen/small_icon_opacity_size_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
