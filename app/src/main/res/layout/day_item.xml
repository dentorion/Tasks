<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp">

    <TextView
        android:id="@+id/day_item_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="8sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_item_number_of_day"
        tools:text="TUE" />

    <TextView
        android:id="@+id/day_item_number_of_day"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_circle_day_unselected"
        android:gravity="center|center_vertical"
        android:textColor="@color/main_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/day_item_count_tasks"
        app:layout_constraintStart_toStartOf="@+id/day_item_count_tasks"
        app:layout_constraintTop_toBottomOf="@+id/day_item_count_tasks"
        tools:text="1" />

    <TextView
        android:id="@+id/day_item_count_tasks"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_circle_calendar_count_tasks_unselected"
        android:gravity="center|center_vertical"
        android:textColor="@color/main_light"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="99"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/day_item_circle_that_day"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/ic_circle_that_day"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/day_item_count_tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/day_item_number_of_day"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
