<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Tasks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_text</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" >@color/color_main_light_extra</item>
        <item name="colorOnSurface">@color/color_main</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- MENU ITEMS ACTION BAR -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorSurface">@color/color_main_light_extra</item>
        <item name="checkboxStyle">@style/HideFinishedTasks</item>
    </style>

    <style name="HideFinishedTasks" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/color_main</item>
    </style>

    <!-- ACTION BAR -->

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/color_main_light_extra</item>
        <item name="colorOnPrimary">@color/color_main</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/color_stroke_checkbox</item>
        <item name="colorOnSurface">@color/color_stroke_checkbox</item>
    </style>

    <!-- SNACK BAR -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/color_main</item>
    </style>

    <!-- FLOATING BUTTON -->
    <style name="FloatBtn">
        <item name="backgroundTint">@color/color_main</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- ALERT DIALOG BUTTON -->
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_main</item>
    </style>

    <!-- SPLASH SCREEN -->

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" >@color/color_main_light_extra</item>
    </style>

</resources>