<resources>

    <!-- Base application theme. -->
    <style name="Theme.Tasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/main_light_extra</item>
        <item name="colorOnSurface">@color/main</item>
        <item name="android:textColor">@color/main</item>

        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- MENU ITEMS ACTION BAR -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorSurface">@color/main_light_extra</item>
        <item name="checkboxStyle">@style/HideFinishedTasks</item>
    </style>

    <style name="HideFinishedTasks" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/main</item>
    </style>

    <!-- ACTION BAR -->

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/main_light_extra</item>
        <item name="colorOnPrimary">@color/main</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/main_light</item>
        <item name="colorOnSurface">@color/main_light</item>
    </style>

    <!-- SNACK BAR -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/main_light_extra</item>
    </style>

    <!-- FLOATING BUTTON -->
    <style name="FloatBtn">
        <item name="backgroundTint">@color/main</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- ALERT DIALOG BUTTON -->
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main</item>
    </style>

    <!-- SPLASH SCREEN -->

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/main_light_extra</item>
    </style>

    <!-- DATE PICKER -->

    <style name="DatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/main_light_extra</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="colorAccent">@color/main_light</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorSecondaryInverse">@color/main</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="Theme.Tasks.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Tasks.AppWidgetContainer" parent="Theme.Tasks.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">1dp</item>
    </style>

    <style name="NoPaddingDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/up_slide</item>
        <item name="android:windowExitAnimation">@anim/down_slide</item>
    </style>

</resources>