<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Tasks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main_light_extra</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_main_light_extra</item>
        <!-- Action Bar -->
        <item name="colorSurface">@color/color_main_light_extra</item>
        <item name="android:textColorPrimary">@color/color_main</item>
        <!-- SnackBar -->
        <item name="colorOnSurface">@color/color_main</item>
        <item name="android:textColor">@color/black</item>
        <!-- Radio Button -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/color_main</item>
    </style>

    <!-- FLOATING BUTTON -->
    <style name="FloatBtn">
        <item name="backgroundTint">@color/color_main</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- SPLASH SCREEN Theme-->

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>