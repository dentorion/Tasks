<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allTasksFragment">
    <fragment
        android:id="@+id/allTasksFragment"
        android:name="com.example.tasksexample.presentation.ui.main.fragment.AllTasksFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_all_tasks">
        <action
            android:id="@+id/action_allTasksFragment_to_editTaskFragment"
            app:destination="@id/editTaskFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_allTasksFragment_self"
            app:destination="@id/allTasksFragment"
            app:popUpTo="@id/allTasksFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editTaskFragment"
        android:name="com.example.tasksexample.presentation.ui.addedit.fragment.EditTaskFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_edit_task" >
        <action
            android:id="@+id/action_editTaskFragment_to_allTasksFragment"
            app:destination="@id/allTasksFragment"
            app:popUpTo="@id/allTasksFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="task"
            app:argType="com.example.tasksexample.domain.entity.Task"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="label"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/deleteFinishedDialog"
        android:name="com.example.tasksexample.presentation.ui.delete.fragment.DeleteFinishedDialog"
        android:label="DeleteFinishedDialog" /><action android:id="@+id/action_global_deleteFinishedDialog" app:destination="@id/deleteFinishedDialog"/>
    <dialog
        android:id="@+id/changeLanguageDialog"
        android:name="com.example.tasksexample.presentation.ui.language.fragment.ChangeLanguageDialog"
        android:label="ChangeLanguageDialog" />
    <action android:id="@+id/action_global_changeLanguageDialog" app:destination="@id/changeLanguageDialog" />
</navigation>